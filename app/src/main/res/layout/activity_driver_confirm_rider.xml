<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/confirmPickup"
        android:layout_width="228dp"
        android:layout_height="129dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="156dp"
        android:text="Confirm Pickup"
        android:onClick="confirmPickup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/maptest"
        android:layout_width="228dp"
        android:layout_height="129dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="292dp"
        android:onClick="maptest"
        android:text="Map test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/checkRoute"
        android:layout_width="228dp"
        android:layout_height="129dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="136dp"
        android:text="Check Route to pickup"
        android:onClick="checkRoute"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPickup" />

    <TextView
        android:id="@+id/confirmRideText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="64dp"
        android:text="Ride"
        android:textSize="60px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>