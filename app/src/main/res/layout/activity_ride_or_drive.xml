<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RideOrDriveActivity">

    <Button
        android:id="@+id/riderButton"
        android:layout_width="332dp"
        android:layout_height="64dp"
        android:layout_marginTop="284dp"
        android:text="I am seeking a ride"
        android:onClick="onRiderButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/driverButton"
        android:layout_width="332dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:text="I am seeking passengers"
        android:onClick="onDriverButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/riderButton" />
</androidx.constraintlayout.widget.ConstraintLayout>