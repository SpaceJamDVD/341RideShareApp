<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RiderArrivedActivity">

    <Button
        android:id="@+id/safetyButtonRA"
        android:layout_width="336dp"
        android:layout_height="65dp"
        android:layout_marginTop="360dp"
        android:text="Safety features"
        android:onClick="onSafetyButtonRA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/arrivedButton"
        android:layout_width="336dp"
        android:layout_height="65dp"
        android:layout_marginTop="44dp"
        android:text="Arrived"
        android:onClick="onArrivedButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/safetyButtonRA" />
</androidx.constraintlayout.widget.ConstraintLayout>